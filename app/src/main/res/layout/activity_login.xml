<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seah_background">

    <!-- 상단 로고 영역 -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="80dp"
        android:paddingBottom="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- 세아제강 로고 -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_seah_logo"
            android:contentDescription="세아제강 로고"
            android:layout_marginBottom="24dp"/>

        <!-- 시스템 타이틀 -->
        <TextView
            android:id="@+id/tvSystemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="세아제강 물류팀 PDA 시스템"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/seah_primary"
            android:layout_marginBottom="8dp"/>

        <!-- 부제목 -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="창고 관리 시스템"
            android:textSize="14sp"
            android:textColor="@color/seah_text_secondary"/>

    </LinearLayout>

    <!-- 로그인 폼 영역 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/seah_surface"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- 로그인 제목 -->
            <TextView
                android:id="@+id/tvLoginTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/seah_text_primary"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp"/>

            <!-- 사원번호 입력 필드 -->
            <EditText
                android:id="@+id/editTextId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="사원번호"
                android:inputType="text"
                android:maxLines="1"
                android:text="Seah"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/seah_text_primary"
                android:textColorHint="@color/seah_text_secondary"/>

            <!-- 비밀번호 입력 필드 -->
            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:maxLines="1"
                android:text="1234"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/seah_text_primary"
                android:textColorHint="@color/seah_text_secondary"/>

            <!-- 로그인 버튼 -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="로그인"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:textColor="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- 하단 버전 정보 -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0"
        android:textSize="12sp"
        android:textColor="@color/seah_text_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout> 